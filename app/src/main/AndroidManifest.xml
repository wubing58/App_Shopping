<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.wb.myshoppingmall">
    <!-- 联网权限 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/atguigu_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyShoppingMall">
        <activity android:name=".app.LoginActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"/>

        <activity android:name=".shoppingcart.shoukuanma.Shoukuanma"
            android:configChanges="keyboardHidden|screenSize|orientation"/>

        <activity android:name=".shoppingcart.activity.ShoppingCartActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"/>

        <activity android:name=".app.GoodsInfoActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"/>

        <activity android:name=".user.activity.MessageCenterActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"/>

        <activity android:name=".app.MainActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"/>

        <activity android:name=".app.Welcome"
            android:configChanges="keyboardHidden|screenSize|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>